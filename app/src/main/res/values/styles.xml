<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Pokemon Stats -->
    <style name="PokemonStatsBar" parent="Base.Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">@dimen/pokemon_stat_item_width</item>
        <item name="android:layout_height">@dimen/pokemon_stat_item_height</item>
        <item name="android:scaleY">2</item>
    </style>

    <style name="PokemonStatsText">
        <item name="android:layout_width">@dimen/pokemon_stat_item_width</item>
        <item name="android:layout_height">@dimen/pokemon_stat_item_height</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
