<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/game_viewholder_height">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/card_layout_margin_16dp">

        <TextView
            android:id="@+id/game_generation_big"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/card_layout_margin_16dp"
            android:gravity="center"
            android:textSize="28sp"
            tools:text="IV"/>

        <ImageView
            android:id="@+id/game_arrow"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_keyboard_arrow_right_black_48dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/game_arrow"
            android:layout_toRightOf="@id/game_generation_big"
            android:orientation="vertical">

            <TextView
                android:id="@+id/game_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                tools:text="Pokemon Blue, Red, Yellow"/>

            <TextView
                android:id="@+id/game_generation_caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#909090"
                tools:text="Generation I"/>
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>
