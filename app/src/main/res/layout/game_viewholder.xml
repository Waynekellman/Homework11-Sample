<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
android:layout_height="@dimen/game_viewholder_height">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/game_viewholder_height">

        <ImageView
            android:id="@+id/clickable_imageview"
            android:layout_width="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/horizontal_gradient"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/game_generation_big"
            android:layout_width="@dimen/card_layout_left_icon_width"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/card_layout_margin_16dp"
            android:gravity="center"
            android:textAlignment="textEnd"
            android:textSize="@dimen/viewholder_generation_large_text_size"
            tools:text="IV" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/viewholder_headline_margin_left"
            android:orientation="vertical"
            android:paddingBottom="@dimen/card_layout_margin_16dp"
            android:paddingTop="@dimen/card_layout_margin_16dp">

            <TextView
                android:id="@+id/game_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textMedium"
                android:textSize="@dimen/viewholder_headline_text_size"
                tools:text="Pokemon Blue, Red, Yellow" />

            <TextView
                android:id="@+id/game_generation_caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textLight"
                tools:text="Generation I" />
        </LinearLayout>

        <ImageView
            android:id="@+id/game_arrow"
            android:layout_width="@dimen/viewholder_arrow_right"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/card_layout_margin_16dp"
            android:paddingBottom="@dimen/card_layout_margin_16dp"
            android:paddingTop="@dimen/card_layout_margin_16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_keyboard_arrow_right_black_48dp"
            android:tint="@color/colorAccent" />

    </android.support.v7.widget.CardView>

</FrameLayout>