<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="48dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/card_layout_margin_16dp"
        android:paddingRight="@dimen/card_layout_margin_16dp">

        <TextView
            android:id="@+id/pokemon_id"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/card_layout_margin_16dp"
            android:gravity="center"
            android:textSize="22sp"
            tools:text="150"/>

        <ImageView
            android:id="@+id/pokemon_arrow"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_keyboard_arrow_right_black_48dp"/>

        <TextView
            android:id="@+id/pokemon_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/game_arrow"
            android:layout_toRightOf="@id/pokemon_id"
            android:gravity="center_vertical"
            android:textSize="18sp"
            tools:text="Mewtwo"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>